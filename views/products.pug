//- page-a.pug
extends layout.pug

block content
  main#products
    section#sidebar
      h2 Catégories
      #product-categories
        button(data-category='cameras') Appareils photo
        button(data-category='consoles') Consoles
        button(data-category='screens') Écrans
        button(data-category='computers') Ordinateurs
        button.selected(data-category='') Tous les produits
      h2 Classement
      #product-criteria
        button.selected(data-criteria='price', data-order='asc') Prix (bas-haut)
        button(data-criteria='price', data-order='desc') Prix (haut-bas)
        button(data-criteria='name', data-order='asc') Nom (A-Z)
        button(data-criteria='name', data-order='desc') Nom (Z-A)
    section#products-wrapper
      p#products-count
      h1 Produits
      #products-list

block scripts
  script(src='/assets/scripts/products.js')
